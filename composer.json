{
	"name": "silvermax/maxskitter",
	"description": "MaxSkitter is SilverStripe module for slides management and presentation with jQuery skitter plugin.",
	"type": "silverstripe-module",
	"license": "BSD-3-Clause",
	"keywords": ["silverstripe", "maxskitter", "carousel", "jquery", "skitter"],
	"authors": [
	{
		"name": "Pali Ondras",
		"email": "pali@silvermax.sk"
	}
	],
	"require":
	{
		"silverstripe/framework": "4.*",
		"silverstripe/cms": "4.*",
		"composer/installers": "*",
		"undefinedoffset/sortablegridfield": "*",
		"silverstripe/asset-admin": "^1.12",
		"silverstripe/vendor-plugin": "^1.6"
	},
	"extra": {
		"expose": [
			"css",
			"images",
			"javascript"
		]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"silverstripe/vendor-plugin": true
		}
	},
	"autoload": {
        "psr-4": {
            "Silvermax\\MaxSkitter\\": "src/"
        }
    }
}
